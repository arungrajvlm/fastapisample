[Unit]
Description=FastAPI Application
After=network.target

[Service]
User=ec2-user
Group=ec2-user
WorkingDirectory=/home/ec2-user/fastapisample
Environment="PATH=/home/ec2-user/fastapisample/venv/bin"
ExecStart=/home/ec2-user/fastapisample/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target
